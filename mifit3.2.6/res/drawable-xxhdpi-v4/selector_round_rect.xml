<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dialogButtonClick" />
            <stroke android:width="@dimen/dialog_button_stroke" android:color="@color/black30" />
            <corners android:radius="@dimen/dialog_button_radius" />
            <padding android:left="@dimen/dialog_button_stroke" android:top="@dimen/dialog_button_stroke" android:right="@dimen/dialog_button_stroke" android:bottom="@dimen/dialog_button_stroke" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="@dimen/dialog_button_stroke" android:color="@color/black30" />
            <corners android:radius="@dimen/dialog_button_radius" />
            <padding android:left="@dimen/dialog_button_stroke" android:top="@dimen/dialog_button_stroke" android:right="@dimen/dialog_button_stroke" android:bottom="@dimen/dialog_button_stroke" />
        </shape>
    </item>
</selector>