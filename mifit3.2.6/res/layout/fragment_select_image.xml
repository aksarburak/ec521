<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/dialog_empty_area" />
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@drawable/dialog_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/mili_normal_txt_size" android:textColor="@color/main_ui_title_color" android:gravity="center" android:id="@id/select_image_camera_area" android:background="@drawable/btn_click_bg_round_top" android:layout_width="fill_parent" android:layout_height="@dimen/item_height_small" android:text="@string/select_from_camera" />
            <View android:background="@color/black20" android:layout_width="fill_parent" android:layout_height="1.0px" />
            <TextView android:textSize="@dimen/mili_normal_txt_size" android:textColor="@color/main_ui_title_color" android:gravity="center" android:id="@id/select_image_local_area" android:background="@drawable/btn_click_bg_round_bottom" android:layout_width="fill_parent" android:layout_height="@dimen/item_height_small" android:text="@string/select_from_local" />
        </LinearLayout>
        <FrameLayout android:background="@drawable/dialog_bg" android:layout_width="fill_parent" android:layout_height="@dimen/item_height_max" android:layout_marginTop="@dimen/item_margin">
            <TextView android:textSize="@dimen/click_button_text_size" android:textColor="@color/black60" android:gravity="center" android:id="@id/select_image_cancel" android:background="@drawable/btn_click_bg_round_dialog" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/cancel" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>